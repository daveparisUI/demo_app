<h1>Listing microposts</h1>

<table>
  <tr><th><%= link_to 'Users', users_url %></th></tr>

  <tr>
    <th>Content</th>
    <th>User ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.content %></td>
    <td><%= micropost.user_id %></td>
    <td><%= (User.find_by_id(micropost.id).nil? ? "n/a" : User.find_by_id(micropost.id).name)%></td> <!--# User.find_by_id(micropost.id).name-->
    <td><%= link_to 'Show', micropost %></td>
    <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
    <td><%= link_to 'Destroy', micropost, confirm: "Are you sure you wanna delete post: #{micropost.content}?", method: :delete %></td>
  </tr>
<% end %>
</table>

